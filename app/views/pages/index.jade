extends ../layout
block link
  link(href="/css/index.css",rel="stylesheet")
  script(src="/js/index.js")
block content
  .wrapper
    if sessionuser
      if sessionuser.role > 10
        p Administrator Options
        ul 
          li
            a(target="_blank", href="/admin/subject/new") Add Subjects
          li
            a(target="_blank", href="/admin/subject/list") View Subjects List
          li
            a(target="_blank", href="/admin/textbook/list") View Textbook List
          li
            a(target="_blank", href="/admin/user/list") View User List
      else
        p Regular User Options
        ul 
          li
            a(target="_blank", href="/regular/textbook/list") View My Textbook List
          li
            a(target="_blank", href="/regular/user/list") View User List
    a(href="javascript:;")
      img(src="/images/fullpage/2.jpg" alt="fullpageImg" style="width:100%;height:300px;")
  .container
    .row
      each sub in subjects
        .panel.panel-default
          .panel-heading
            h3
              a(href='/subject?sub=#{sub._id}&p=0') #{sub.name}
          .panel-body
            if sub.textbooks && sub.textbooks.length > 0
              each item in sub.textbooks
                .col-md-2
                  .thumbnail
                    a(href="/textbook/#{item._id}")
                        img(src="/upload_textbook/#{item.photo}", alt="#{item.title}", style="width:250px;height:250px;")
                    .caption
                      h4 #{item.title}
                      p: a.btn.btn-primary(href="/textbook/#{item._id}", role="button") See Detail
    
