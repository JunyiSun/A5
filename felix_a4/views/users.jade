extends layout

block content
    script(type='text/javascript').
        $(document).ready(function() {
            $('tr').click(function() {
                window.location.href = "/users/" + encodeURIComponent($(this).find('td:first').html());
            });
        });

    div.container-fluid
    div.row
        div.col-md-2
        div.col-md-8
            h3 Welcome #{logged_in_user.email}
            br

    div.row
    div.col-md-2
    div.col-md-8
        table.table.table-striped.table-hover
            tr
                th Email address
                th Display name
            each user in users
                tr
                    td= user.email
                    td= user.display_name
